<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    android:elevation="3dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewSource"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_info"
            app:layout_constraintRight_toLeftOf="@+id/textView_sources"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textView_sources"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/article_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/article_image"
            app:layout_constraintVertical_bias="0.533"
            android:layout_marginEnd="8dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>